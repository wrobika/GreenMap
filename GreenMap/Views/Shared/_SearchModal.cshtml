                        <span asp-validation-for="NazwaObiektu" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Lokalizacja" class="control-label"></label>                    
                        <select asp-for="Lokalizacja"
                                class="form-control"
                                asp-items="@districtList">
                        </select>
                    </div>
                    <div class="form-group">
                        <label asp-for="Status" class="control-label"></label>
                        <select asp-for="Status"
