@model GreenMap.Models.OdwiertSearch
@{ 
    SelectList districtList = (SelectList)ViewData["districtList"];
    SelectList statusList = (SelectList)ViewData["statusList"];
    SelectList filteringClassList = (SelectList)ViewData["filteringClassList"];
}

<div class="modal fade bd-search-modal-lg" id="searchModal" tabindex="-1" role="dialog" aria-labelledby="searchModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="searchModalLabel">Wyszukaj obiekt</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form asp-action="Search" asp-controller="Search">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="NazwaObiektu" class="control-label"></label>
                        <input asp-for="NazwaObiektu" class="form-control" id="NazwaObiektu" />
                        <span asp-validation-for="NazwaObiektu" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="NrRbdh" class="control-label"></label>
                        <input asp-for="NrRbdh" class="form-control" id="NrRbdh" />
                        <span asp-validation-for="NrRbdh" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Lokalizacja" class="control-label"></label>
                        <select asp-for="Lokalizacja"
                                class="form-control"
                                asp-items="@districtList"
                                id="Lokalizacja">
                        </select>
                    </div>
                    <div class="form-group">
                        <label asp-for="Status" class="control-label"></label>
                        <select asp-for="Status"
                                class="form-control"
                                asp-items="@statusList"
                                id="Status">
                        </select>
                    </div>
                    <div class="form-group">
                        <label asp-for="EurefX1" class="control-label"></label>
                        <input asp-for="EurefX1" id="EurefX1" class="form-control" placeholder="określ początek przedziału" />
                        <span asp-validation-for="EurefX1" class="text-danger"></span>
                        <input asp-for="EurefX2" id="EurefX2" class="form-control" placeholder="określ koniec przedziału" />
                        <span asp-validation-for="EurefX2" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="EurefY1" class="control-label"></label>
