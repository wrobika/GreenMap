                        <span asp-validation-for="EurefY1" class="text-danger"></span>
                        <input asp-for="EurefY2" class="form-control" placeholder="określ koniec przedziału"/>
                        <span asp-validation-for="EurefY2" class="text-danger"></span>
                    </div>
                    @*<div class="form-group">
                        <label asp-for="EurefY2" class="control-label"></label>

                    </div>*@
                    <div class="form-group">
                        <label asp-for="GlebokoscZwierciadla1" class="control-label"></label>
                        <input asp-for="GlebokoscZwierciadla1" class="form-control" placeholder="określ początek zakresu" />
                        <span asp-validation-for="GlebokoscZwierciadla1" class="text-danger"></span>
                        <input asp-for="GlebokoscZwierciadla2" class="form-control" placeholder="określ koniec zakresu" />
                        <span asp-validation-for="GlebokoscZwierciadla2" class="text-danger"></span>
                    </div>
                    @*<div class="form-group">
                        <label asp-for="GlebokoscZwierciadla2" class="control-label"></label>

                    </div>*@
                    <div class="form-group">
                        <label asp-for="Filtracja1" class="control-label"></label>
                        <input asp-for="Filtracja1" class="form-control" placeholder="określ początek zakresu" />
                        <span asp-validation-for="Filtracja1" class="text-danger"></span>
                        <input asp-for="Filtracja2" class="form-control" placeholder="określ koniec zakresu" />
                        <span asp-validation-for="Filtracja2" class="text-danger"></span>
                    </div>
                    @*<div class="form-group">
                        <label asp-for="Filtracja2" class="control-label"></label>

                    </div>*@
                    <div class="form-group">
                        <label asp-for="HydroGleby" class="control-label"></label>
                        <input asp-for="HydroGleby" class="form-control" />
                        <span asp-validation-for="HydroGleby" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ZanieczyszczenieGleby" class="control-label"></label>
                        <input asp-for="ZanieczyszczenieGleby" class="form-control" />
                        <span asp-validation-for="ZanieczyszczenieGleby" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="JakoscWody" class="control-label"></label>
                        <input asp-for="JakoscWody" class="form-control" />
                        <span asp-validation-for="JakoscWody" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Nawodnienie" class="control-label"></label>
                        <input asp-for="Nawodnienie" class="form-control" />
                        <span asp-validation-for="Nawodnienie" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Szukaj" class="btn btn-success btn-block" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>




