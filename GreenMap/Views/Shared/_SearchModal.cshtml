                        <span asp-validation-for="EurefY1" class="text-danger"></span>
                        <input asp-for="EurefY2" id="EurefY2" class="form-control" placeholder="określ koniec przedziału" />
                        <span asp-validation-for="EurefY2" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="GlebokoscZwierciadla1" class="control-label"></label>
                        <input asp-for="GlebokoscZwierciadla1" id="GlebokoscZwierciadla1" class="form-control" placeholder="określ początek zakresu" />
                        <span asp-validation-for="GlebokoscZwierciadla1" class="text-danger"></span>
                        <input asp-for="GlebokoscZwierciadla2" id="GlebokoscZwierciadla2" class="form-control" placeholder="określ koniec zakresu" />
                        <span asp-validation-for="GlebokoscZwierciadla2" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="KlasaFiltracji" class="control-label"></label>
                        <select asp-for="KlasaFiltracji"
                                class="form-control"
                                asp-items="@filteringClassList"
                                id="KlasaFiltracji">
                        </select>
                    </div>
                    <div class="form-group">
                        <label asp-for="Filtracja1" class="control-label"></label>
                        <input asp-for="Filtracja1" id="Filtracja1" class="form-control" placeholder="określ początek zakresu" />
                        <span asp-validation-for="Filtracja1" class="text-danger"></span>
                        <input asp-for="Filtracja2" id="Filtracja2" class="form-control" placeholder="określ koniec zakresu" />
                        <span asp-validation-for="Filtracja2" class="text-danger"></span>
                    </div>

