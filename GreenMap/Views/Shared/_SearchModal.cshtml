                        <label asp-for="EurefX1" class="control-label"></label>
                        <input asp-for="EurefX1" class="form-control" placeholder="określ początek przedziału"/>
                        <span asp-validation-for="EurefX1" class="text-danger"></span>
                        <input asp-for="EurefX2" class="form-control" placeholder="określ koniec przedziału"/>
                        <span asp-validation-for="EurefX2" class="text-danger"></span>
                    </div>
